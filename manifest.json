{
  "manifest_version": 3,
  "name": "Teams Transcript Exporter",
  "version": "1.1",
  "description": "Extract chat transcript from Microsoft Teams and download as JSON.",
  "permissions": ["scripting", "activeTab"],
  "action": {
    "default_title": "Export Transcript",
    "default_icon": {
      "48": "icons/icon48.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}