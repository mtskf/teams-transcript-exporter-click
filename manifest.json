{
  "manifest_version": 3,
  "name": "Teams Transcript Scraper",
  "version": "1.0",
  "description": "Extract transcripts from Microsoft Teams Recap",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "all_frames": true,
      "run_at": "document_start"
    }
  ]
}